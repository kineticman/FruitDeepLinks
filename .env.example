# FruitDeepLinks Environment Configuration
# Copy this file to .env and customize for your setup

# =============================================================================
# Timezone Configuration
# =============================================================================
# Set your local timezone for proper scheduling
# Examples: America/New_York, America/Chicago, America/Los_Angeles, Europe/London
TZ=America/New_York

# =============================================================================
# Database Configuration
# =============================================================================
# Path to SQLite database (inside container)
PEACOCK_DB_PATH=/app/data/fruit_events.db

# =============================================================================
# Virtual Lanes Configuration
# =============================================================================
# Number of virtual channel lanes to create (10-50 recommended)
PEACOCK_LANES=40

# Starting channel number for lanes
PEACOCK_LANE_START_CH=9000

# How many days ahead to plan (7 recommended)
PEACOCK_DAYS_AHEAD=7

# =============================================================================
# Event Padding & Placeholders
# =============================================================================
# Minutes to add as padding after each event (buffer for overruns)
PEACOCK_PADDING_MINUTES=45

# Size of placeholder blocks in minutes
PEACOCK_PLACEHOLDER_BLOCK_MINUTES=60

# Extra days of placeholders beyond latest event
PEACOCK_PLACEHOLDER_EXTRA_DAYS=5

# =============================================================================
# Apple TV Scraper Configuration
# =============================================================================
# Run browser in headless mode (true for Docker, false for debugging)
HEADLESS=true

# Network filtering (false = scrape all providers)
NO_NETWORK=false

# Scraper parameters (advanced)
# TERMS=soccer,basketball,hockey
# TIME_LIMIT_MIN=60
# EXTRA_MS_FLAGS=--scroll-steps 30

# =============================================================================
# Server Configuration (for M3U export)
# =============================================================================
# Base URL where FruitDeepLinks server is accessible
# Update with your actual server IP
SERVER_URL=http://192.168.86.72:6655

# =============================================================================
# Channels DVR Integration (Optional)
# =============================================================================
# Set this to auto-refresh Channels DVR after daily refresh
# Leave blank to disable
CHANNELS_DVR_IP=192.168.86.72

# M3U source name in Channels DVR
CHANNELS_SOURCE_NAME=appletvdeeper

# =============================================================================
# Logging
# =============================================================================
# Log level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO

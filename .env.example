# ==========================================
# FruitDeepLinks Configuration
# ==========================================

# Database (recommended to leave default)
FRUIT_DB_PATH=/app/data/fruit_events.db

# Lane Configuration  (recommend only change lanes and start channum)
FRUIT_LANES=50
FRUIT_LANE_START_CH=9000
FRUIT_DAYS_AHEAD=7
FRUIT_PADDING_MINUTES=45
FRUIT_PLACEHOLDER_BLOCK_MINUTES=60
FRUIT_PLACEHOLDER_EXTRA_DAYS=5

# Server Configuration
SERVER_URL=http://192.168.86.80:6655
PORT=6655
HOST=0.0.0.0

# Channels DVR Integration (optional to have script have CDVR refresh source during refresh)
CHANNELS_DVR_IP=192.168.86.72
CHANNELS_SOURCE_NAME=fruitdeeplinks

# Apple TV Scraper (recommended to leave alone)
HEADLESS=true
NO_NETWORK=false

# Timezone (adjust)
TZ=America/New_York

# Logging (suggested to leave alone)
LOG_LEVEL=INFO
LOG_DIR=/app/logs

# Output Directory (suggestd to leave alone)
OUT_DIR=/app/out

# Auto-refresh (handled by web UI, but can be preset)
AUTO_REFRESH_ENABLED=true
AUTO_REFRESH_TIME=02:30

# Rate Limiting (for multi_scraper) (suggested to leave default)
SCRAPER_TERM_TIME_LIMIT=180
SCRAPER_GLOBAL_TIME_LIMIT=0




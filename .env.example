# ==========================================
# FruitDeepLinks Configuration
# ==========================================

# Database
FRUIT_DB_PATH=/app/data/fruit_events.db

# Lane Configuration  
FRUIT_LANES=50
FRUIT_LANE_START_CH=9000
FRUIT_DAYS_AHEAD=7
FRUIT_PADDING_MINUTES=45
FRUIT_PLACEHOLDER_BLOCK_MINUTES=60
FRUIT_PLACEHOLDER_EXTRA_DAYS=5

# Server Configuration
SERVER_URL=http://localhost:6655
PORT=6655
HOST=0.0.0.0

# Channels DVR Integration (optional)
CHANNELS_DVR_IP=
CHANNELS_SOURCE_NAME=fruitdeeplinks

# Apple TV Scraper
HEADLESS=true
NO_NETWORK=false

# Timezone
TZ=America/New_York

# Logging
LOG_LEVEL=INFO
LOG_DIR=/app/logs

# Output Directory
OUT_DIR=/app/out

# Auto-refresh (handled by web UI, but can be preset)
AUTO_REFRESH_ENABLED=true
AUTO_REFRESH_TIME=02:30

# Rate Limiting (for multi_scraper)
SCRAPER_TERM_TIME_LIMIT=180
SCRAPER_GLOBAL_TIME_LIMIT=0

# ADB Configuration (if using ADBTuner)
ADB_ENABLED=false

